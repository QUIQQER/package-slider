<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>

    <bricks>
        <brick control="\QUI\Slider\Controls\Slider">
            <title>
                <locale group="quiqqer/slider" var="slider.control.title" />
            </title>
            <description>
                <locale group="quiqqer/slider" var="slider.control.description" />
            </description>

            <settings>
                <setting name="images" data-qui="package/quiqqer/slider/bin/admin/ImageDataList">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.images" />
                </setting>

                <setting name="autostart" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.autostart" />
                </setting>
                <setting name="shadow" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.shadow" />
                </setting>
                <setting name="showControlsAlways" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.showControlsAlways" />
                </setting>
                <setting name="showTitleAlways" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.showTitleAlways" />
                </setting>
                <setting name="period" type="number">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.period" />
                    <defaultValue>5000</defaultValue>
                </setting>

            </settings>
        </brick>

        <brick control="\QUI\Slider\Controls\SliderNivo">
            <title>
                <locale group="quiqqer/slider" var="slider.nivo.control.title" />
            </title>
            <description>
                <locale group="quiqqer/slider" var="slider.nivo.control.description" />
            </description>

            <settings>
                <setting name="images" data-qui="package/quiqqer/slider/bin/admin/ImageDataList">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.images" />
                </setting>

                <setting name="autostart" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.autostart" />
                </setting>
                <setting name="showControlsAlways" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.showControlsAlways" />
                </setting>
                <setting name="showTitleAlways" type="checkbox">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.showTitleAlways" />
                </setting>
                <setting name="period" type="number">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.period" />
                    <defaultValue>5000</defaultValue>
                </setting>

                <setting name="effect" type="select">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.effect" />

                    <option value="fade">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.fade" />
                    </option>
                    <option value="fold">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.fold" />
                    </option>
                    <option value="random">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.random" />
                    </option>

                    <option value="sliceLeftDown">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceLeftDown" />
                    </option>
                    <option value="sliceLeftUp">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceLeftUp" />
                    </option>
                    <option value="sliceLeftRightDown">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceLeftRightDown" />
                    </option>
                    <option value="sliceLeftRightUp">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceLeftRightUp" />
                    </option>
                    <option value="sliceRightDown">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceRightDown" />
                    </option>
                    <option value="sliceRightUp">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceRightUp" />
                    </option>
                    <option value="wipeDown">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.wipeDown" />
                    </option>
                    <option value="wipeUp">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.wipeUp" />
                    </option>

                    <option value="sliceDownLeft">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceDownLeft" />
                    </option>
                    <option value="sliceDownRight">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceDownRight" />
                    </option>
                    <option value="sliceUpDownLeft">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceUpDownLeft" />
                    </option>
                    <option value="sliceUpDownRight">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceUpDownRight" />
                    </option>
                    <option value="sliceUpLeft">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceUpLeft" />
                    </option>
                    <option value="sliceUpRight">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.sliceUpRight" />
                    </option>
                    <option value="wipeLeft">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.wipeLeft" />
                    </option>
                    <option value="wipeRight">
                        <locale group="quiqqer/slider" var="brick.control.slider.setting.effect.wipeRight" />
                    </option>
                </setting>

                <setting name="slices" type="number">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.slices" />
                </setting>
                <setting name="animspeed" type="number">
                    <locale group="quiqqer/slider" var="brick.control.slider.setting.animspeed" />
                </setting>

            </settings>
        </brick>
    </bricks>

</quiqqer>
